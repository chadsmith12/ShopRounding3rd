@model ShopRounding3rd.Web.Models.ProductsListViewModel

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

@foreach (var item in Model.Products)
{
    <div>
        <h3>@item.Name</h3>
        @item.Description
        <h4>@item.Price.ToString("c")</h4>
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new {page = x}))
</div>
